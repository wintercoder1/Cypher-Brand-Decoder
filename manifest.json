{
  "manifest_version": 3,
  "name": "Cypher Brand Decoder",
  "version": "1.0",
  "description": "Shows the company that owns the brand on Amazon product pages. \n\nCypher - a tool that decodes the unknown and unveils the truth.",
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  
  "host_permissions": [
    "*://*.amazon.com/*",
    "*://*.amazon.co.uk/*",
    "*://*.amazon.ca/*",
    "*://*.amazon.de/*",
    "*://*.amazon.fr/*",
    "*://*.amazon.it/*",
    "*://*.amazon.es/*",
    "https://compass-ai-internal-api.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.com/*/dp/*",
        "*://*.amazon.com/gp/product/*",
        "*://*.amazon.co.uk/*/dp/*",
        "*://*.amazon.co.uk/gp/product/*",
        "*://*.amazon.ca/*/dp/*",
        "*://*.amazon.ca/gp/product/*"
      ],
      "js": ["displayElementManager.js",  "PageParsers/typicalProductPageParser.js", "PageParsers/bookPageParser.js", "networkManager.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Cypher Brand Decoder Settings"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "PageParsers/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}